<section class="deletePet">
    <h3>{{details.name}}</h3>
    <p>Pet counter: <i class="fas fa-heart"></i> {{details.likes}}</p>
    <p class="img"><img src="{{details.imageURL}}"></p>
    <form action="#/delete/{{details._id}}" method="POST">
        <p class="description">{{details.description}}</p>
        <button class="button">Delete</button>
    </form>
</section>