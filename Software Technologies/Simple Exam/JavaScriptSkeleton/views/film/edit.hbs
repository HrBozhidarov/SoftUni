<h1>Edit Film</h1>
<section>
    <form action="/edit/{{id}}" method="POST">
        <div>
            <label for="name">Name</label>
            <input type="text" id="name" value="{{name}}" name="film[name]" />
            <label for="genre">Genre</label>
            <input type="text" id="genre" value="{{genre}}" name="film[genre]" />
            <label for="director">Director</label>
            <input type="text" id="director" value="{{director}}" name="film[director]" />
            <label for="year">Year</label>
            <input type="text" id="year" value="{{year}}" name="film[year]" />
            <button type="submit" class="accept">Edit</button>
            <button type="button" class="cancel" onclick="location.href='/'">Cancel</button>
        </div>
    </form>
</section>